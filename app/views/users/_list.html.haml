%div.users-table-container
  %table#users-table
    %thead
      %tr
        %th= t :label_user_name
        %th= t :label_user_email
        %th= t :label_user_role
        %th= t :label_user_active
        %th  &nbsp;
    %tbody
      = render :partial => 'user', :collection => users
  = will_paginate users, :id => 'users-table-pagination', :previous_label => '«'.html_safe, :next_label => '»'.html_safe

