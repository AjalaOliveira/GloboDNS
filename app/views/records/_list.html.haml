%div.record-table-container
  - local_assigns[:enable_edit] = true if local_assigns[:enable_edit].nil?
  - if records.empty?
    %table.record-table
      <br>
      %div.flash-error=t('message_no_recordss_found')
      / %div.flash-error='No records found'
  -else
    %table.record-table
      %thead
        %tr
          %th= t :label_domain_record_host
          %th= t :label_domain_record_ttl
          %th= t :label_domain_record_type
          %th= t :label_domain_record_priority
          %th= t :label_domain_record_weight
          %th= t :label_domain_record_port
          %th= t :label_domain_record_content
          %th  &nbsp;


      %tbody
        = render :partial => 'records/record', :collection => records, locals: {:enable_edit => local_assigns[:enable_edit]}
  - if records.respond_to?(:current_page)
    = will_paginate records, :class => 'record-table-pagination', :previous_label => '«'.html_safe, :next_label => '»'.html_safe
