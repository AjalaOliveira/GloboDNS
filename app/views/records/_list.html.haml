%div.record-table-container
  - if records.empty?
    %table.record-table
    %thead
        %tr
        %div.flash-error='No records found'
  -else
    %table.record-table
      %thead
        %tr
          %th= t :label_domain_record_host
          %th= t :label_domain_record_ttl
          %th= t :label_domain_record_type
          %th= t :label_domain_record_priority
          %th= t :label_domain_record_content
          %th  &nbsp;


      %tbody
        = render :partial => 'records/record', :collection => records
    - if records && records.any?#
      = will_paginate records, :class => 'record-table-pagination', :previous_label => '«'.html_safe, :next_label => '»'.html_safe#, :params => { :controller => 'records', :action => 'index', :domain_id => records.first.domain_id, :id => nil }
