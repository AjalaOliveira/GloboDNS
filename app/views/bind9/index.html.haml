%h1= t(:title_bind_configuration)
%div.bind-config
  = form_tag(bind9_export_path, :remote => true, :class => 'bind9-export-form') do |f|
    = hidden_field_tag 'export-all', false

    %h2= t(:title_master_named_conf)
    ~ text_area_tag 'master-named-conf', @master_named_conf

    %h2= t(:title_slave_named_conf)
    ~ text_area_tag 'slave-named-conf',  @slave_named_conf

    %div.actions
      = button_tag(t(:generic_reload),     :type => 'reset', :class => 'reload-bind-config-button ui-icon-refresh', 'data-method' => :get, 'data-remote' => true, :href => bind9_config_path)
      = button_tag(t(:generic_export),     :class => 'export-bind-button ui-icon-download-alt')
      = button_tag(t(:generic_export_all), :class => 'export-all-bind-button ui-icon-download-alt')

%div.export-output.hidden

