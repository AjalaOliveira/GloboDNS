!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = page_title
    = stylesheet_link_tag 'application', 'prototip'
    = javascript_include_tag :defaults, 'prototip'
  %body
    #Container
      #Header
        %h1
          BIND DLZ on Rails
      #search-bar{:style => "float: right"}
        - form_for( :search, :url => { :controller => :search, :action => :results } ) do |f|
          = f.text_field :parameter
          = submit_tag "Search"
      - if current_user
      #Nav
        %ul
          %li
            = link_to "Zones", zones_path
          %li
            = link_to "Templates", zone_templates_path
          / Logs
          %li
            = link_to "Users", users_path
          %li
            = link_to "Logout", logout_path
      - end
      #Body
        = show_flash

        = yield
      #Footer
        = link_to "BIND DLZ on Rails", "http://www.opensourcery.co.za/bind-dlz-on-rails", :target => '_blank'
