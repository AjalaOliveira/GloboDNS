%h1.underline 
  = @zone_template.new_record? ? "New Zone Template" : "Update Zone Template"

- form_for( @zone_template ) do |f|
  %table
    %tr
      %td Name
      %td= f.text_field :name
    %tr
      %td TTL
      %td= f.text_field :ttl
    %tr
      %td= link_to 'Cancel', templates_path
      %td= submit_tag 'Save'