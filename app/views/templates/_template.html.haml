%tr
  %td= link_to template.name, template_path( template )
  %td
    = link_to image_tag('table_edit.png'), :controller => 'zone_templates', :action => 'edit', :id => template.id
    = link_to image_tag('table_delete.png'), template_path( template ), :method => :delete, :confirm => 'Are you sure you want to remove this template?'
    