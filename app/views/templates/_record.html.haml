%tr.center
  %td= record.host
  %td= record.ttl
  %td= record.record_type
  %td= record.priority
  %td= record.data
  %td= record.primary_ns
  %td= record.contact
  %td= record.refresh
  %td= record.retry
  %td= record.expire
  %td= record.minimum
  %td= record.zone_template.name
  %td
    = link_to image_tag('table_edit.png'), :controller => 'record_templates', :action => 'edit', :id => record.id
  %td
    = link_to image_tag('table_delete.png'), { :controller => 'record_templates', :action => 'destroy', :id => record.id }, :method => :delete, :confirm => 'Are you sure you want to remove this template?'
